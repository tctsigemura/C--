#define READ    0
#define WRITE   1
#define APPEND  2
#define BLKSIZ  512

public int exec(char[] name, void[] argv);
public void _exit(int status);
public int wait(int[] sta);
public int sleep(int ms);
public int creat(char[] path);
public int remove(char[] path);
public int mkDir(char[] path);
public int rmDir(char[] path);
public int open(char[] path, int mode);
public int close(int fd);
public int read(int fd, void[] buf, int len);
public int write(int fd, void[] buf, int len);
public int seek(int fd, int ptrh, int ptrl);
public int conRead(void[] buf, int len);
public int conWrite(void[] buf);

//
// システムコールのエラー番号（TacOS/kernel/syscall.h のコピー）
//
public int errno;

#define ENAME           (-1)      // ファイル名が不正
#define ENOENT          (-2)      // 対象ファイルが見つからなかった
#define EEXIST          (-3)      // 同じディレクトリに同名のファイルが存在する
#define EOPENED         (-4)      // 対象ファイルがオープンされている
#define ENFILE          (-5)      // ファイルを開きすぎている
#define EBADF           (-6)      // 不正なファイル記述子
#define ENOSPC          (-7)      // 空き領域が不足
#define EPATH           (-8)      // パスが不正（ディレクトリでない、存在しない)
#define EMODE           (-9)      // アクセスモードが一致しない
#define EFATTR          (-10)     // ファイルの属性が不正
#define ENOTEMP         (-11)     // ディレクトリの中身が空でない
#define EINVAL          (-12)     // 引数が不正
#define EMPROC          (-13)     // プロセスが多すぎる
#define ENOEXEC         (-14)     // EXE ファイルが不正(見つからない、開けない）
#define EMAGIC          (-15)     // 不正なマジック番号
#define EMFILE          (-16)     // 1プロセスがファイルを開きすぎている
#define ECHILD          (-17)     // 子プロセスが存在しない
#define ENOZOMBIE       (-18)     // ゾンビ状態の子プロセスが存在しない
#define ENOMEM          (-19)     // メモリ不足

// 例外ハンドラが検知するユーザプロセスのエラー
#define ESYSNUM         (-20)     // システムコール番号が不正
#define EZERODIV        (-21)     // ゼロ割算
#define EPRIVVIO        (-22)     // 特権例外
#define EILLINST        (-23)     // 不正命令

// ライブラリが検知するユーザプロセスのエラー
#define EUSTK           (-24)     // スタックオーバーフロー
#define EUMODE          (-25)     // オープンモードと使用方法が合わない
#define EUBADF          (-26)     // 不正なファイルポインタ
#define EUEOF           (-27)     // fgetc の前に EOF チェックすべき
#define EUNFILE         (-28)     // オープンファイル数が多すぎる
#define EUSTDIO         (-29)     // 標準入出力をクローズしようとした
#define EUFMT           (-30)     // fprintfの書式文字列に不正な変換指定
#define EUNOMEM         (-31)     // ヒープ領域が不足
#define EUBADA          (-32)     // 不正なアドレスが free に渡された
#define ELAST           (-33)     // 最後のエラー番号
